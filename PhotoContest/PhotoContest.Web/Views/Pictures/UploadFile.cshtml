@using Microsoft.AspNet.Identity
@model PhotoContest.Web.Models.BindingModels.PhotoBindingModel

@{
    ViewBag.Title = "Upload";
}

<h1>Upload</h1>


@using (Html.BeginForm("UploadFile", "Pictures", new { UserId = User.Identity.GetUserId() }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Photo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="photo" name="upload" />
                @Html.ValidationMessageFor(model => model.Upload, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

