@using PagedList.Mvc
    @model PagedList.PagedList<PhotoContest.Web.Models.ViewModels.PictureDetailsViewModel>

    @{
        ViewBag.Title = "Pictures";
    }

    <h2>All Photos in contests:</h2>

    <div class="col-md-12">
        @foreach (var picture in Model)
        {
            @Html.Partial("_PicturePartial", picture)
        }
    </div>

    <div class="col-md-9">
        <div class="center-block">
            @Html.PagedListPager(Model, page => Url.Action("Index", "Pictures", new { page, pageSize = Model.PageSize }))
            Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Photos
        </div>
    </div>


