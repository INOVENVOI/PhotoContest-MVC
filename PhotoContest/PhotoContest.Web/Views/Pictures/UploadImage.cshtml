@using System.Linq
@using Glimpse.Core.ClientScript
@using PhotoContest.Web.Helpers
@using PhotoContest.Data;
@using Microsoft.AspNet.Identity;
@using PhotoContext.Models
@{  
    WebImage photo = null;
    var newFileName = "";
    var imagePath = "";
    var context = new PhotoDbContext();

    if (IsPost)
    {
        photo = WebImage.GetImageFromRequest();
        if (photo != null)
        {
            newFileName = Guid.NewGuid().ToString() + "_" +
            Path.GetFileName(photo.FileName);
            imagePath = @"images\" + newFileName;
            var photos = new Stack<string>();

            if (!photos.Contains(photo.FileName))
            {
                photo.Save(@"~\" + imagePath);
                photos.Push(photo.FileName);
            }

            var picture = new Picture
            {
                ImageURL = imagePath
            };

            var userId = this.User.Identity.GetUserId();

            if (userId != null)
            {
                User user = context.Users.FirstOrDefault(u => u.Id == userId);
                picture.Owner = user;
                picture.OwnerId = user.Id;

                context.Users.FirstOrDefault(u => u.Id == userId).Pictures.Add(picture);
                context.SaveChanges();
            }
            else
            {
                context.Pictures.Add(picture);
                context.SaveChanges();
            }
        }
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>Image Upload</title>
</head>
<body>
    <form action="" method="post" enctype="multipart/form-data">
        <fieldset>
            <legend> Upload Image </legend>
            <label for="Image">Image</label>
            <input type="file" name="Image" />
            <br />
            <input type="submit" value="Upload" />
        </fieldset>
    </form>
    <h1>Uploaded Image</h1>
    @if (imagePath != "")
    {
        <div class="result">
            <img src="~/Images/../@imagePath" />
        </div>
    }
</body>
</html>

